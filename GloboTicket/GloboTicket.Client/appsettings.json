{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "d:\\GloboTicket.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "shared": true,
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "labels": [
            {
              "key": "app",
              "value": "GloboTicket"
            },
            {
              "key": "service",
              "value": "Web"
            }
          ],
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss} [{Level:u3}] [{ThreadId}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "AzureQueues": {
    "QueueName": "paymentrequests",
    "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=globoticket;AccountKey=6uvhSfUKCPjVnGB22g5Q4J30IzsJ/lqeM3wgmflBm66FO1dJWXvV6LOEKWgGWqb1XFdDhsLWIx6bxrhXleGEfw==;EndpointSuffix=core.windows.net"
  }
}
